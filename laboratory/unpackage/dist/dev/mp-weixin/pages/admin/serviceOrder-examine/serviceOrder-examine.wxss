.content {
  padding: 20rpx;
}
.content .container {
  margin-top: -200rpx;
  width: 98%;
}
.content .container .main {
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
}
.content .container .big-title {
  margin-left: 20rpx;
  font-size: 34rpx;
}
.content .container .big-title::before {
  top: 24%;
}
.content .container .detail {
  padding: 10rpx 14rpx;
}
.content .container .appliction .big-title {
  margin: 20rpx 36rpx;
}
.content .container .appliction .big-title::before {
  top: 19%;
}
.content .container .appliction .detail {
  padding: 20rpx 36rpx;
  border-radius: 16rpx;
  line-height: 80rpx;
}
.content .container .appliction .detail .item {
  border-bottom: 1rpx solid #F8F8F8;
}
.content .container .appliction .detail .item .radio-group {
  font-size: 28rpx;
}
.content .container .appliction .detail .item .radio-group .radio-a {
  -webkit-transform: scale(0.6);
          transform: scale(0.6);
}
.item {
  line-height: 52rpx;
  padding: 12rpx 0rpx;
}
/**
  * 头部
  */
.head {
  height: 350rpx;
  padding: 20rpx 44rpx;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}
.head .des {
  font-size: 34rpx;
  height: 100rpx;
  letter-spacing: 4rpx;
}
.head .back {
  margin-top: 8rpx;
}
.big-title {
  padding-left: 20rpx;
  position: relative;
}
.big-title::before {
  display: block;
  width: 8rpx;
  height: 28rpx;
  background-color: #455CFF;
  content: "";
  position: absolute;
  left: 0;
  border-radius: 5rpx;
}
.next-step {
  margin-top: 100rpx;
  bottom: 30rpx;
}
.next-step .return {
  background-color: #C7C7CC;
}
.next-step .cu-btn {
  padding: 0rpx 20rpx;
  width: 48%;
  border-radius: 40rpx;
}

